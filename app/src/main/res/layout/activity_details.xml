<?xml version="1.0" encoding="utf-8"?>
<layout
    tools:context="com.lee.hansol.finalpopularmovies.DetailsActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:id="@+id/activity_details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/activity_details_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="@dimen/textSize_extra_big"
                    android:gravity="bottom|left"
                    android:paddingTop="@dimen/spacing_extra_big"
                    android:paddingLeft="@dimen/spacing_normal"
                    android:paddingBottom="@dimen/spacing_normal"
                    android:background="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    tools:text="Sen and CHihiro"/>
                <android.support.constraint.Guideline
                    android:id="@+id/vertiGuideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.5"/>
                <ImageView
                    android:id="@+id/activity_details_thumbnail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/activity_details_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/vertiGuideline"
                    android:layout_margin="@dimen/spacing_big"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_refresh_black_24dp"/>
                <TextView
                    android:id="@+id/activity_details_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/activity_details_thumbnail"
                    app:layout_constraintLeft_toRightOf="@id/vertiGuideline"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize_big"
                    android:gravity="start"
                    tools:text="2015/04/10"/>
                <TextView
                    android:id="@+id/activity_details_rating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/activity_details_date"
                    app:layout_constraintLeft_toRightOf="@id/vertiGuideline"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize_small"
                    android:gravity="start"
                    tools:text="8.1 / 10"/>
                <TextView
                    android:id="@+id/activity_details_overview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/activity_details_thumbnail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="@dimen/spacing_big"
                    android:layout_marginLeft="@dimen/spacing_big"
                    android:layout_marginRight="@dimen/spacing_big"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/textSize_normal"
                    tools:text="Once upon a time there was a man...and a man...and a man..and a man... and a woman... and a child"/>
                <ImageView
                    android:id="@+id/line_under_overview"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/activity_details_overview"
                    app:layout_constraintLeft_toLeftOf="@id/activity_details_overview"
                    app:layout_constraintRight_toRightOf="@id/activity_details_overview"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:id="@+id/trailers_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/line_under_overview"
                    app:layout_constraintLeft_toLeftOf="@id/line_under_overview"
                    android:layout_marginTop="@dimen/spacing_small"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textSize_normal"
                    tools:text="Trailers:" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_details_trailers_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/trailers_text"
                    app:layout_constraintLeft_toLeftOf="@id/line_under_overview"
                    app:layout_constraintRight_toRightOf="@id/line_under_overview"
                    />
                <ImageView
                    android:id="@+id/line_under_trailers_container"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    app:layout_constraintTop_toBottomOf="@id/activity_details_trailers_container"
                    app:layout_constraintLeft_toLeftOf="@id/activity_details_overview"
                    app:layout_constraintRight_toRightOf="@id/activity_details_overview"
                    android:layout_marginTop="@dimen/spacing_normal"
                    android:background="@android:color/darker_gray"/>

            </android.support.constraint.ConstraintLayout>
        </ScrollView>
        <TextView
            android:id="@+id/activity_details_error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/textSize_extra_big"
            android:textColor="@android:color/black"
            android:text="@string/message_error_in_detail_view"/>
    </FrameLayout>
</layout>
