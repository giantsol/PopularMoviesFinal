<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="thumbnailStyle">
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="trailerArrowImageStyle">
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="normalTextStyle">
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>

    <style name="movieTitleStyle" parent="normalTextStyle">
        <item name="android:textSize">@dimen/textSize_extra_big</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">bottom|start</item>
    </style>

    <style name="headerStyle" parent="normalTextStyle">
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerWithTopMarginStyle" parent="headerStyle">
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="subheaderStyle" parent="normalTextStyle">
        <item name="android:textSize">@dimen/textSize_big</item>
    </style>

    <style name="trailerItemTextStyle" parent="subheaderStyle">
        <item name="android:layout_marginLeft">@dimen/spacing_normal</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
    </style>

    <style name="overviewTextStyle" parent="normalTextStyle">
        <item name="android:layout_marginTop">@dimen/spacing_big</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="emptyViewTextStyle" parent="normalTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_big</item>
    </style>

</resources>
